{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist",
    "moduleResolution": "node",
    "paths": {
      "@arcana/auth/types/*": ["./node_modules/@arcana/auth/types/*"],
      "*": ["./src/*", "./node_modules/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "strict": false,
    "allowSyntheticDefaultImports": true
  }
}
