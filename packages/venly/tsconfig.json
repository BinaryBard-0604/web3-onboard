{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*", "src/types/**/*"],

  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist",
    "moduleResolution": "node",
    "paths": {
      "*": ["./src/*", "./node_modules/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "strict": false,
    "allowSyntheticDefaultImports": true
  }
}
