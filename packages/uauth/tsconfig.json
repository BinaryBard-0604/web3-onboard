{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],

  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["./src/*", "./node_modules/*"]
    },
    "typeRoots": ["node_modules/@types"]
  }
}
