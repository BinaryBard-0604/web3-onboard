{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["./src/*", "./node_modules/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["svelte"]
  }
}
