  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist"],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "target": "ES2018",
    "module": "ES2020",
    "resolveJsonModule": true
  },
  "outDir": "dist"
}
