{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "outDir": "build"
  },
  "include": ["src/**/*", "postcss.config.cjs"],
  "exclude": ["./.svelte-kit"]
}
